                    <!-- Content -->
                    <h5 class="text-uppercase">Eat-Da-Burger App</h5>
                    <p class="ts-none">Thank you for coming to Eat-Da-Burger. Eat-Da-Burger is a burger menu app. Thank
                        you come again!</p>

                </div>
                <!-- Grid column -->

                <hr class="clearfix w-100 d-md-none pb-3">

